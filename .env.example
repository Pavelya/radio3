# Logging
LOG_LEVEL=info

# Database
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Next.js Admin App (public vars exposed to browser)
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Next.js Public Web App (public vars exposed to browser)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WEB_URL=http://localhost:3000
NEXT_PUBLIC_FUTURE_YEAR_OFFSET=500

# PostgreSQL connection string for migrations
DATABASE_URL=postgresql://postgres:password@db.xxxxx.supabase.co:5432/postgres

# Test Database (separate from production)
TEST_SUPABASE_URL=https://test-xxxxx.supabase.co
TEST_SUPABASE_KEY=your-test-key

# Cache
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=true

# AI Services
ANTHROPIC_API_KEY=sk-ant-your-key-here
EMBEDDING_API_KEY=test-key

# Script generation settings
SCRIPT_MODEL=claude-3-5-haiku-20241022
SCRIPT_TEMPERATURE=0.7
SCRIPT_MAX_TOKENS=2000

# Tone validation
TONE_MIN_ACCEPTABLE_SCORE=70

# Piper TTS
PIPER_TTS_URL=http://localhost:5002
PIPER_BINARY_PATH=/usr/local/bin/piper
PIPER_MODELS_PATH=/opt/piper-models
PIPER_DEFAULT_VOICE=en_US-lessac-medium
PIPER_CACHE_DIR=/var/cache/piper-tts
MAX_CACHE_SIZE_MB=10240

# Time & Location
FUTURE_YEAR_OFFSET=500
STATION_TIMEZONE=Europe/Warsaw

# RAG
RAG_TOP_K=12
RECENCY_BOOST=1.4
RETRIEVAL_TIMEOUT_MS=2000

# Audio
SPEECH_LUFS_TARGET=-16
MUSIC_LUFS_TARGET=-14
PEAK_CEILING_DB=-1.0

# Streaming
# Note: Icecast runs on 8001 to avoid conflict with API server (port 8000)
ICECAST_HOST=localhost
ICECAST_PORT=8001
ICECAST_SOURCE_PASSWORD=hackme

# API Server
# API server runs on port 8000 (default). Set PORT only if you need a different port.
PORT=8000
API_URL=http://localhost:8000

# Workers
WORKER_EMBEDDER_INSTANCES=2
WORKER_SEGMENT_GEN_INSTANCES=3
WORKER_MASTERING_INSTANCES=2
MAX_CONCURRENT_JOBS=3

# Scheduler Worker
SCHEDULER_MODE=continuous